<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.themonster.segaclient.GroupActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/groupNameGroupActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/userListGroupActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/groupNameGroupActivity" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/requestAccessButtonGroupActivity"
            android:onClick="AddUserToGroup"
            android:text="@string/add_user_to_group" />

        <Button
            android:id="@+id/requestAccessButtonGroupActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="RequestAccess"
            android:text="@string/request_access" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
